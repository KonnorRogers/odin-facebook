<%= form_with(model: User.new, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :first_name, class: 'form-label' %>
  <%= f.text_field :first_name, class: 'form-field' %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: 'form-field'%>

  <%= f.label :email, class: 'form-label' %>
  <%= f.email_field :email, class: 'form-field'%>

  <%= f.label :password, class: 'form-label' %>
  <%= f.password_field :password, class: 'form-field' %>

  <%= f.label :password_confirmation, class: 'form-label' %>
  <%= f.password_field :password_confirmation, class: 'form-field' %>
<% end %>
