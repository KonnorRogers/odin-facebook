<%= form_with(model: User.new, url: new_user_registration_path, local: true, class: "signup-form") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="signup-selection">
    <%= f.label :first_name, class: 'signup-label' %>
    <%= f.text_field :first_name, class: 'signup-field' %>
  </div>

  <div class="signup-selection">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'signup-field'%>
  </div>

  <div class="signup-selection">
    <%= f.label :email, class: 'signup-label' %>
    <%= f.email_field :email, class: 'signup-field'%>
  </div>

  <div class="signup-selection">
    <%= f.label :password, class: 'signup-label' %>
    <%= f.password_field :password, class: 'signup-field' %>
  </div>

  <div class="signup-selection">
    <%= f.label :password_confirmation, class: 'signup-label' %>
  <%= f.password_field :password_confirmation, class: 'signup-field' %>
  </div>

  <div>
    <%= f.submit "Signup", class: "btn btn-blue" %>
  </div>
<% end %>
