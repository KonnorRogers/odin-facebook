<ul class="navbar">
  <li class="home"><%= link_to "Home", root_url %></li>
  <div class="dropdown" data-behavior="friend_requests">
    <button class="dropbtn friend-requests-btn" id="drop-btn">
      <%= fa_icon "users" %>
    </button>
    <div id="myFriends" class="dropdown-content">
      <%= link_to "Link 1", "#" %>
      <%= link_to "Link 2", "#" %>
      <%= link_to "Link 3", "#" %>
    </div>
  </div>
  <div class="dropdown" data-behavior="notifications">
    <button class="dropbtn notifications-btn" id="drop-btn">
      <%= fa_icon "bell" %>
    </button>

    <%# https://www.w3schools.com/howto/tryit.asp?filename=tryhow_css_dropdown_navbar_click %>
    <div id="myNotifications" class="dropdown-content">
      <%= link_to "Link 1", "#" %>
      <%= link_to "Link 2", "#" %>
      <%= link_to "Link 3", "#" %>
    </div>
  </div>
  <li class="logout"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
</ul>

