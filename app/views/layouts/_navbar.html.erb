<ul class="navbar">
  <li class="profile"><%= link_to current_user.full_name.titleize %></li>
  <li class="home"><%= link_to "Home", root_url %></li>
  <div class="dropdown" data-behavior="friend-requests">
    <button class="dropbtn friend-requests-btn" id="drop-btn" data-behavior="friend-requests-link">
      <%= fa_icon "users" %><span class="count" data-behavior="friend-requests-count"></span>
      <%= fa_icon "caret-down" %>
    </button>
    <div id="myFriends" class="dropdown-content" data-behavior="friend-requests-items">
    </div>
  </div>
  <div class="dropdown" data-behavior="notifications">
    <button class="dropbtn notifications-btn" id="drop-btn" data-behavior="notifications-link">
      <%= fa_icon "bell" %> <span class="count" data-behavior="notifications-count"> </span>
      <%= fa_icon "caret-down" %>
    </button>

    <div id="myNotifications" class="dropdown-content" data-behavior="notifications-items">
    </div>
  </div>

  <li class="logout"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
</ul>

