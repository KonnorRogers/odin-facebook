<% if user_signed_in? %>
  <ul class="navbar">
    <li class="home"><%= link_to "Home", root_url %></li>
    <div class="dropdown">
      <button class="dropbtn" onclick="dropDown()">
        <%= fa_icon "bell" %>
        <%= fa_icon "caret-down" %>
      </button>

      <%# https://www.w3schools.com/howto/tryit.asp?filename=tryhow_css_dropdown_navbar_click %>
      <div id="myDropdown" class="dropdown-content">
        <%= link_to "Link 1", "#" %>
        <%= link_to "Link 2", "#" %>
        <%= link_to "Link 3", "#" %>
      </div>
    </div>
    <li class="logout"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
  </ul>
<% elsif current_page?(signup_path) || current_page?(new_user_registration_path) %> 
  <div class='login-header-container'>
    <h1 class="title"><%= link_to "ParamagicBook", root_url %> </h1>
    <%= render 'layouts/login_form' %>
  </div>
<% end %>

<%= javascript_include_tag "dropdown"%>
